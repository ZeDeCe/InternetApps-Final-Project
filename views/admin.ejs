                                            </svg>
                                            <div class="fs-4 text-align-center">
                                                Manage Map
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
        <script>
            $(document).ready(function() {
                
                $("#logout").click(function(){
                    location.href = '/logout'
                })
          
                $("#users_manage").click(function() {
                    location.href = "/admin/users"
                })
                $("#stats").click(function() {
                    location.href = "/admin/stats"
                })
                $("#locations").click(function() {
                    location.href = "/admin/branches"
                })
                $("#orders_manage").click(function() {
                    location.href = "/admin/orders"
                })
                $("#items_manage").click(function() {
                    location.href = "/items/create"
                })
            })
        </script>
        <%- include('./partials/footer'); %>
    </body>
</html>