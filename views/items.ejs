<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center mb-8">Our Items</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% items.forEach(item => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:scale-105">
                    <img src="/images/<%= item.picture %>" alt="<%= item.name %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2"><%= item.name %></h2>
                        <p class="text-gray-600 mb-2">$<%= item.price.toFixed(2) %></p>
                        <div class="flex items-center mb-2">
                            <% const avgRating = item.ratings.length ? item.ratings.reduce((sum, rating) => sum + rating.value, 0) / item.ratings.length : 0; %>
                            <% for (let i = 1; i <= 5; i++) { %>
                                <svg class="w-5 h-5 <%= i <= Math.round(avgRating) ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                </svg>
                            <% } %>
                            <span class="ml-1 text-sm text-gray-600">(<%= item.ratings.length %> ratings)</span>
                        </div>
                        <a href="/items/<%= item.slug %>" class="block text-center bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition duration-300">View Details</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>