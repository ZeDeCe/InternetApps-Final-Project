<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <style>
        .item-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }
        .item-card {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }
        .item-card img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Items</h1>
    <div class="item-grid">
        <% items.forEach(item => { %>
            <div class="item-card">
                <a href="/items/<%= item.slug %>">
                    <img src="/images/<%= item.picture %>" alt="<%= item.name %>">
                    <h2><%= item.name %></h2>
                    <p>Price: $<%= item.price.toFixed(2) %></p>
                </a>
            </div>
        <% }); %>
    </div>
</body>
</html>